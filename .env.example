# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/subscriptions

# Encryption Secret for Password Storage
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_SECRET=your-64-character-hex-string-here

# Email Configuration (Optional - for email reminders)
# Sign up at https://resend.com and get your API key
# Free tier: 100 emails/day, 3,000 emails/month
RESEND_API_KEY=re_your_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development
